<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="3dip"
    android:paddingLeft="1.5dip"
    android:paddingRight="1.5dip"
    android:paddingTop="3dip" >

    <FrameLayout
        android:id="@+id/local_theme_list_detail_second_container1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_weight="1.0"
        android:background="@drawable/effect_list_item_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/local_theme_list_detail_second_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/effect_item_bg"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/local_theme_list_detail_second_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="6dip"
            android:gravity="center"
            android:textColor="#ff414549"
            android:textSize="14sp" />
        
    </FrameLayout>

    <FrameLayout
        android:id="@+id/local_theme_list_detail_second_container2"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_weight="1.0"
        android:background="@drawable/effect_list_item_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/local_theme_list_detail_second_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/effect_item_bg"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/local_theme_list_detail_second_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="6dip"
            android:gravity="center"
            android:textColor="#ff414549"
            android:textSize="14sp" />
                    
    </FrameLayout>

    <FrameLayout
        android:id="@+id/local_theme_list_detail_second_container3"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_weight="1.0"
        android:background="@drawable/effect_list_item_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/local_theme_list_detail_second_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/effect_item_bg"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/local_theme_list_detail_second_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="6dip"
            android:gravity="center"
            android:textColor="#ff414549"
            android:textSize="14sp" />
        
    </FrameLayout>

</LinearLayout>