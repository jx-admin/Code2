<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="256dp"
    android:layout_height="256dp"
    android:orientation="vertical" 
    android:background="#ffffff"
    android:layout_margin="@dimen/margin_normal">
    <TextView  android:id="@+id/flag_tv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="对比"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/margin_normal"
            android:scaleType="fitCenter"/>
        <TextView android:id="@+id/info_tv"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/margin_normal"
            android:textColor="@android:color/black"
            android:text="手机购物节华为P6\n加入合约计划手机购物节华为P6加入合约计划手机购物节华为P6加入合约计划手机购物节华为P6加入合约计划"/>
        <TextView android:id="@+id/price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/product_info_price_color"
            android:text="￥1190.00"/>
            
            
    </LinearLayout>
    

</RelativeLayout>
