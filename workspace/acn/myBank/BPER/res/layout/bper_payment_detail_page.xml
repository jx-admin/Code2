<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.accenture.mbank.view.ReHeightImageButton
            android:id="@+id/detail_ibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/payment_detail_selector_off" />

        <include layout="@layout/bper_payment_account_simple_model" />

        <TableLayout
            android:id="@+id/content_tl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:divider="@drawable/separation_line"
            android:orientation="vertical"
            android:showDividers="middle"
            android:shrinkColumns="1"
            android:stretchColumns="*" >
        </TableLayout>
    </LinearLayout>

</ScrollView>