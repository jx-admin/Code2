<?xml version="1.0" encoding="utf-8"?>
<com.accenture.mbank.view.PinExpandedLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_small"
    android:paddingLeft="@dimen/padding_medium"
    android:paddingRight="@dimen/padding_medium"
    android:paddingTop="@dimen/padding_small" >

  
    <EditText
        android:id="@+id/pin_edit"
        android:layout_width="match_parent"
        android:cursorVisible="false"
        android:layout_height="wrap_content"
        android:background="@drawable/text_box_selector"
        android:singleLine="true"
        android:inputType="number"
        android:maxLength="6"
         />

</com.accenture.mbank.view.PinExpandedLayout>