<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	android:id="@+id/TreeItem" 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_height="wrap_content" 
	android:layout_width="fill_parent" 
	android:paddingBottom="4dip" 
	android:paddingLeft="12dip"
	android:paddingRight="12dip">
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
	    android:id="@+id/TreeItemIcon"
	    android:src="@drawable/sys_tree_icon_folder" />
	<TextView 
	    android:text="TextView" 
	    android:textColor="#FFFFFFFF"
	    android:layout_height="wrap_content" 
	    android:textSize="20dip" 
	    android:layout_width="fill_parent" 
	    android:id="@+id/TreeItemTitle"
        android:layout_toRightOf="@+id/TreeItemIcon" 
        android:paddingTop="8dip"
	    />
	<CheckBox 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignParentRight="true" 
	    android:id="@+id/TreeItemCheckBox"
		android:layout_gravity="center_vertical|right" />
	<RadioButton 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignParentRight="true" 
	    android:id="@+id/TreeItemRadio"
		android:layout_gravity="center_vertical|right" />
</RelativeLayout>