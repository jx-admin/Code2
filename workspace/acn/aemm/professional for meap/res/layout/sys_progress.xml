<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_margin="10dip" android:stretchColumns="1"
	android:background="@drawable/sys_dialog_bg"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TableRow android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<TextView android:textColor="#FFFFFF" android:textSize="25dip"
			android:id="@+id/confirm_title" android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/sys_confirm_icon"
			android:layout_gravity="center_vertical">
		</TextView>
	</TableRow>
	<TableRow android:layout_height="1dip"
		android:background="@drawable/sys_break_line"
		android:layout_width="fill_parent"
		android:layout_marginBottom="5dip">
	</TableRow>
	<TableRow android:layout_height="wrap_content"
		android:minHeight="50dip" android:layout_width="fill_parent">
		<TextView android:textColor="#FFFFFF" android:textSize="15dip"
			android:id="@+id/confirm_message" android:paddingLeft="10dip"
			android:paddingTop="10dip" android:paddingRight="10dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical">
		</TextView>
	</TableRow>
	<TableRow android:layout_height="wrap_content"
		android:minHeight="50dip" android:layout_width="fill_parent">
		<RelativeLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent">
			<ProgressBar android:id="@+id/progress"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip" android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:layout_centerHorizontal="true" />
			<TextView android:id="@+id/progress_percent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:paddingBottom="12dip"
				android:layout_marginLeft="15dip" android:layout_marginRight="10dip"
				android:layout_alignParentLeft="true"
				android:layout_below="@id/progress" />
			<TextView android:id="@+id/progress_number"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:paddingBottom="12dip"
				android:layout_marginLeft="10dip" android:layout_marginRight="15dip"
				android:layout_alignParentRight="true"
				android:layout_below="@id/progress" />
		</RelativeLayout>
	</TableRow>
	<TableRow android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<Button android:text="取消" android:layout_weight="1"
			android:id="@+id/confirm_negativeButton"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
	</TableRow>
</TableLayout>