<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tree_layout" android:gravity="center_horizontal"
	android:layout_height="wrap_content" android:orientation="vertical"
	android:layout_width="fill_parent"
	android:background="@drawable/sys_dialog_bg">
	<TextView android:textColor="#FFFFFF" android:textSize="25dip"
		android:text="title" android:id="@+id/tree_title"
		android:layout_width="fill_parent"
		android:drawableLeft="@drawable/sys_tree_icon"
		android:layout_height="wrap_content"
		android:src="@drawable/sys_tree_icon"
		android:layout_gravity="center_vertical">
	</TextView>
	<LinearLayout android:layout_height="1dip"
		android:background="@drawable/sys_break_line"
		android:layout_width="fill_parent"
		android:layout_marginBottom="5dip">
	</LinearLayout>
	<ListView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/tree_id"
		android:cacheColorHint="#00000000" android:divider="#00000000"
		android:layout_marginBottom="50dip">
	</ListView>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_marginTop="-50dip" android:orientation="horizontal"
		android:layout_width="fill_parent">
		<Button android:text="确定" android:layout_weight="1"
			android:id="@+id/tree_positiveButton"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
		<Button android:text="取消" android:layout_weight="1"
			android:id="@+id/tree_negativeButton"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
	</LinearLayout>
</LinearLayout>