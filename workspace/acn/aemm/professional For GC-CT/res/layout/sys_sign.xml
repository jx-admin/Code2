<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/sys_background">
	<RelativeLayout android:orientation="vertical"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/sys_title_bg">
		<Button android:id="@+id/sys$btn_return"
		android:layout_alignParentLeft="true" android:background="@drawable/sys_back"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerInParent="true"
			android:id="@+id/sys$tv_title" android:text=""
			android:textColor="#FFFFFF" android:textStyle="bold"
			android:textSize="15dip" />	
		<Button android:id="@+id/sign$btn_submit"
			android:layout_alignParentRight="true" android:background="@drawable/sign_btn" android:textColor="@color/white" android:text="@string/sys_sign_define"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignBaseline="@id/sys$btn_return"  android:visibility="visible"/>
	</RelativeLayout>
	<LinearLayout android:layout_height="fill_parent" android:padding="0dip" android:layout_margin="0dip"
			android:layout_width="fill_parent" android:background="@drawable/sys_view_bg" >
	    <LinearLayout android:layout_width="fill_parent" android:gravity="center_vertical" 
		android:id="@+id/signMain" android:layout_height="fill_parent" android:padding="0dip" android:layout_margin="0dip">
		</LinearLayout>
	    
	</LinearLayout>
</LinearLayout>
			