<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/sys_background">
	<include layout="@layout/sys_head" />
	<RelativeLayout android:layout_width="fill_parent"
		android:gravity="center" android:paddingTop="2dip"
		android:paddingBottom="45dip" android:paddingLeft="7dip"
		android:layout_height="wrap_content" android:layout_weight="1">
		<ImageView android:id="@+id/photoPreView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true" android:paddingLeft="2dip"
			android:paddingTop="2dip" android:paddingRight="9dip"
			android:paddingBottom="9dip" android:adjustViewBounds="true"
			android:scaleType="fitXY"
			android:background="@drawable/sys_camera_photoframe" />
		<ImageView android:id="@+id/waterMarkView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:background="@drawable/sys_camera_takephoto" />
	</RelativeLayout>
	<LinearLayout android:layout_marginTop="-50dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center">
		<Button android:layout_gravity="center" android:textSize="20dip"
			android:textColor="#FFFFFF" android:layout_width="wrap_content"
			android:layout_height="50dip" android:text="@string/upload"
			android:layout_weight="1" android:id="@+id/btn_photoUpload"
			android:background="@drawable/sys_button_toolbar" />
	</LinearLayout>
</LinearLayout>
