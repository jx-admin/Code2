<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView android:id="@+id/scrollView1"
		android:layout_height="wrap_content" android:layout_width="match_parent">
		<LinearLayout android:layout_width="match_parent" android:orientation="vertical"
			android:id="@+id/linearLayout1" android:layout_height="match_parent">
			<TextView android:layout_width="fill_parent" android:id="@+id/battery_tv"
				android:layout_height="wrap_content" android:text="@string/hello" />
			<TextView android:layout_width="fill_parent" android:id="@+id/signalStrength_tv"
				android:layout_height="wrap_content" android:text="@string/hello" />
			<TextView android:layout_width="fill_parent" android:id="@+id/mashineInfo_tv"
				android:layout_height="wrap_content" android:text="@string/hello" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>
