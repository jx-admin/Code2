<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bodyBK" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/titleBK"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/user_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/bodyMarginLR"
                android:text="@string/change_derma_str"
                android:textColor="@color/titleFontC" />

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/marginTB"
                android:layout_marginRight="@dimen/marginR"
                android:layout_marginTop="@dimen/marginTB"
                android:text="@string/submitSTR" />
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/change_derma_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/itemGap"
            android:layout_marginLeft="@dimen/bodyMarginLR"
            android:layout_marginRight="@dimen/bodyMarginLR" >

            <RadioButton
                android:id="@+id/default_derma_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/default_derma_str"
                android:textColor="@color/titleFontC" />

            <RadioButton
                android:id="@+id/new_derma_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_derma_str"
                android:textColor="@color/titleFontC" />
        </RadioGroup>
    </LinearLayout>

</ScrollView>