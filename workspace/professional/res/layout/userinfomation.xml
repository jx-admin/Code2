<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
        android:background="@color/bodyBK">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/titleBK"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/user_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/bodyMarginLR"
                android:text="@string/userinfomation"
                android:textColor="@color/titleFontC" />

            <Button
                android:id="@+id/repair_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/marginTB"
                android:layout_marginRight="@dimen/marginR"
                android:layout_marginTop="@dimen/marginTB"
                android:text="@string/repairSTR" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bodyMarginLR"
            android:layout_marginRight="@dimen/bodyMarginLR"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f00" />

            <TextView
                android:id="@+id/user_pwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inputpwd"
                android:textColor="@color/fontC" 
                android:visibility="gone"/>

            <EditText
                android:id="@+id/user_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/itemGap"
                android:text="@string/userNameSTR"
                android:textColor="@color/fontC" />

            <EditText
                android:id="@+id/user_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none"
                android:editable="false" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/itemGap"
                android:text="@string/emailSTR"
                android:textColor="@color/fontC" />

            <EditText
                android:id="@+id/user_email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none"
                android:editable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/itemGap"
                android:text="@string/IMSTR"
                android:textColor="@color/fontC" />

            <EditText
                android:id="@+id/user_im_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none"
                android:editable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/itemGap"
                android:text="@string/addressSTR"
                android:textColor="@color/fontC" />

            <EditText
                android:id="@+id/user_address_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none"
                android:editable="false" />

            <requestFocus />
        </LinearLayout>
    </LinearLayout>

</ScrollView>